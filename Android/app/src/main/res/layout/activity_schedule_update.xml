<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".ScheduleUpdate">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/sch_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일정 제목" />

        <EditText
            android:id="@+id/edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="n자 이내로 입력하세요"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/sch_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작 날짜" />

        <EditText
            android:id="@+id/edit_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex)YYYYMMDD"
            android:inputType="date" />

        <TextView
            android:id="@+id/sch_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작 시각" />

        <EditText
            android:id="@+id/edit_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex)hhmm"
            android:inputType="time" />

        <TextView
            android:id="@+id/sch_endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료 날짜" />

        <EditText
            android:id="@+id/edit_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex)YYYYMMDD"
            android:inputType="date" />

        <TextView
            android:id="@+id/sch_endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료 시각" />

        <EditText
            android:id="@+id/edit_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="ex)hhmm"
            android:inputType="time" />

        <TextView
            android:id="@+id/sch_prepare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="준비물" />

        <EditText
            android:id="@+id/edit_reqitems"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:ems="10"
            android:hint="준비물을 입력해주세요."
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/sch_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보기 설정"/>

        <RadioGroup
            android:id="@+id/radio_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radBtn_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혼자보기"/>
            <RadioButton
                android:id="@+id/radBtn_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족과 보기"/>
        </RadioGroup>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="SUBMIT" />
    </LinearLayout>
</ScrollView>